title-color = #835d1a
header-background-color = title-color
background-color = #fffacd
ruler-color = #F6C122
header-height = 0//10vmin
@font-face
  font-family: Adam
  src: url("ADAM.CG.PRO.otf")

a, p, h1, h2, h3, h4, h5, h6, img, hr
  margin-bottom: 0
a
  text-decoration: none
  color: inherit
div:focus
  outline: none
responsive()
  max-width: 100vw
  max-height: 100vh
  margin: 0 auto
divide(a, b)
  a/b
html
  background-color: background-color
  font-family: Arial
  font-size: 4.5vmin

body
  display: flex
  flex-flow: column nowrap
  justify-content: space-between
  margin: 0

header
  // z-index: 1
  display: flex
  justify-content: space-around
  align-items: center
  background-color: header-background-color
  height: header-height
  position: fixed
  width: 100vw
  color: white
  .black-icon
    filter: invert(1)
    height: divide(header-height, 2)
main
  margin-top: header-height
section
  display: flex
  flex-flow: column nowrap
  // align-items: center
  text-align: center
  font-family: Adam
  color: title-color
  margin-top: 2em
  &#home
    img
      responsive()
    margin-top: 1em
  &#productos
    hr
      border-width: 0.1em
      width: 50%
      margin-top: 0.5em
    .slider-for
      max-width: 100vmin
      margin-left: auto
      margin-right: auto
    .slider-nav
      .draggable
        cursor: pointer!important
    .slider
      margin-top: 2em
    .details
      margin: 0 2em
      &>div
        margin-top: 2em
      p
        font-family: Arial
      img
        responsive()
        width: 3em
        margin-top: 1em

.slick-initialized
  &.slick-dotted.slick-slider
    margin-bottom: 0
  .draggable
    cursor: move
  .slick-dots
    position: static
    margin-top: 0.5em
    li
      margin: 0 1em
    li button::before
      font-size: 0.5rem

hr
  width: 80%
  border: 0.2em solid ruler-color
  margin-top: 2em

footer
  text-align: center
  color: title-color
  p
    line-height: 1.5em

  i
    margin: 0.5em
